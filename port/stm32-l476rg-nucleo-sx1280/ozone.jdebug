void OnProjectLoad (void) {
  //
  // Dialog-generated settings
  //
  Project.SetDevice ("STM32L476RG");
  Project.SetHostIF ("USB", "");
  Project.SetTargetIF ("SWD");
  Project.SetTIFSpeed ("4 MHz");
  Project.AddPathSubstitute ("/Users/mringwal/Projects/btstack/port/stm32-l476rg-nucleo-sx1280", "$(ProjectDir)");
