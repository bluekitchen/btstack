{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "make -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "make -f makefile clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "download",
            "type": "shell",
            "options": {
                "cwd":  "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "JLink.exe -device stm32f407vgt6 -speed 4000 -SI SWD -CommanderScript flash.jlink", //Detail description about jlink command, please refer:https://wiki.segger.com/J-Link_Commander
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "build",
            "problemMatcher": []
        },
        {
            "label": "rtt",
            "type": "shell",
            "command": "JLinkRTTClient.exe",
            "args": [],
            "problemMatcher": []
        }
    ]
}
