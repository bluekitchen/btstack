{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "make -f makefile clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        //configuration for openocd with st-link
        {
            "label": "download",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/port/stm32-f4discovery-csr8x11"
            },
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f4x.cfg",
                "-c",
                "program build/a2dp_sink_demo.hex verify reset exit"
            ],
            //"group": "build",
            "dependsOn": "build",
            "presentation": {
                // 配置静默输出
                "reveal": "silent"
            },
            // 报错匹配
            "problemMatcher": "$gcc"
        }
        //configuration for jlink
